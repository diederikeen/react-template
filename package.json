    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "node-sass": "^4.5.3",
    "postcss-import": "^11.0.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "sugarss": "^1.0.1",
    "svg-sprite-loader": "^3.2.5"
  },
  "dependencies": {
    "css-loader": "^0.28.7",
